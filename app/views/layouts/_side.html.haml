.side-wrapper
  .header
    %p.header__user-name 
      = current_user.name
    %ul.header__user-menu
      %li.edit
        =link_to new_group_path do
          = fa_icon("edit")
      %li.icon
        =link_to edit_user_path(current_user) do
          = fa_icon("cog")

  .group-list
    .group
      -current_user.groups.each do |group|
        =link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
